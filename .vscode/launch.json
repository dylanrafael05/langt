{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug (defer)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/Builds/langt-cli/Debug/langt-cli.dll",
            "args": ["defer", "--loop"],
            "cwd": "${workspaceFolder}/Examples",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "preLaunchTask": "build-cli"
        },
        {
            "name": "extension (quick)",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/Experimental/langt-vscode"
            ],
            "preLaunchTask": "build-cli"
        },
        {
            "name": "extension (rebuilding)",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/Experimental/langt-vscode"
            ],
            "cwd": "${workspaceFolder}/Experimental/langt-vscode",
            "preLaunchTask": "build-ext"
        }
    ]
}