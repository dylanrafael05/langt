{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-ext",
            "command": "bash",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/Experimental/langt-vscode"
            },
            "args": ["build.sh"]
        },
        {
            "label": "build cli",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Core/langt-cli/langt-cli.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish cli",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Core/langt-cli/langt-cli.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch cli",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Core/langt-cli/langt-cli.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}