{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-ext",
            "command": "bash",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/Experimental/langt-vscode"
            },
            "args": ["build.sh"]
        },
        {
            "label": "build-cli",
            "command": "python",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "${workspaceFolder}/Scripts/build.py",
                "langt-cli",
                "true"
            ]
        },
        {
            "label": "build-core",
            "command": "python",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "${workspaceFolder}/Scripts/build.py",
                "langt-core",
                "true"
            ]
        },
        {
            "label": "publish",
            "command": "python",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "${workspaceFolder}/Scripts/build.py",
                "all",
                "false"
            ]
        }
    ]
}